{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2015",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "preserveConstEnums": false,
    "strict": true,
    "allowJs": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "src/**/*.bench.ts",
    "src/lib/test_util.ts",
    "dist"
  ],
  "include": [
    "src"
  ]
}
